<jmixCodeSnippets xmlns="http://jmix.io/schema/core/code-snippets">
    <category name="Jmix TM">
        <codeSnippet name="Load least busy user" contextTypes="service,controller">
            <inject variable="taskService" classQualifiedName="com.company.jmixpmflowbase.app.TaskService"/>
            <text language="java">
                com.company.jmixpmflowbase.entity.User leastBusyUser = taskService.findLeastBusyUser();
            </text>
            <description>
                <![CDATA[Gets least busy user]]>
            </description>
        </codeSnippet>

        <codeSnippet name="Load projects list by current authenticated manager" contextTypes="service,controller">
            <inject variable="dataManager" classQualifiedName="io.jmix.core.DataManager"/>
            <text language="java">
                java.util.List&lt;com.company.jmixpmflowbase.entity.Project&gt; list = dataManager.load(com.company.jmixpmflowbase.entity.Project.class)
                .query("select p from Project p where p.manager.id = :current_user_id")
                .list();
            </text>
            <description>
                Load projects by current authenticated manager
            </description>
        </codeSnippet>

        <codeSnippet name="Show warning tray notification" contextTypes="controller">
            <inject variable="notifications" classQualifiedName="io.jmix.flowui.Notifications"/>
            <text language="java">
                notifications.create("${caption}", "${description}")
                .withType(Notifications.Type.WARNING)
                .withPosition(Notification.Position.BOTTOM_END)
                .show();
            </text>
            <description>
                Show warning tray notification
            </description>
            <stringInputParameter code="caption" text="Notification caption"/>
            <stringInputParameter code="description" text="Notification body"/>
        </codeSnippet>

        <codeSnippet name="Inject selenide statics" contextTypes="service,controller">
            <staticInsertion variable="$" type="com.codeborne.selenide.Selenide.$">
                <expression language="java">
                    import static com.codeborne.selenide.Selenide.$;
                </expression>
            </staticInsertion>
            <staticInsertion variable="visible" type="import static com.codeborne.selenide.Condition.visible;">
                <expression language="java">
                    import static com.codeborne.selenide.Condition.visible;
                </expression>
            </staticInsertion>
            <text language="java"/>
            <description>
                Insert selenide statics
            </description>
        </codeSnippet>
    </category>

</jmixCodeSnippets>