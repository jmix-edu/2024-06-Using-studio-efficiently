<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://qrtzTriggerListView.title"
      focusComponent="qrtzTriggersDataGrid">
    <data>
        <collection id="qrtzTriggersDc"
                    class="com.company.jmixpmflowbase.entity.QrtzTrigger">
            <fetchPlan extends="_base">
                <property name="id" fetchPlan="_instance_name"/>
                <property name="qrtzJobDetail" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="qrtzTriggersDl" readOnly="true">
                <query>
                    <![CDATA[select e from QrtzTrigger e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="qrtzTriggersDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="qrtzTriggersDataGrid.create"/>
            <button id="editBtn" action="qrtzTriggersDataGrid.edit"/>
            <button id="removeBtn" action="qrtzTriggersDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="qrtzTriggersDl"/>
        </hbox>
        <dataGrid id="qrtzTriggersDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="qrtzTriggersDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="calendarName"/>
                <column property="description"/>
                <column property="endTime"/>
                <column property="misfireInstr"/>
                <column property="nextFireTime"/>
                <column property="prevFireTime"/>
                <column property="priority"/>
                <column property="qrtzJobDetail"/>
                <column property="startTime"/>
                <column property="triggerState"/>
                <column property="triggerType"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
