<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://qrtzJobDetailListView.title"
      focusComponent="qrtzJobDetailsDataGrid">
    <data>
        <collection id="qrtzJobDetailsDc"
                    class="com.company.jmixpmflowbase.entity.QrtzJobDetail">
            <fetchPlan extends="_base">
                <property name="id" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="qrtzJobDetailsDl" readOnly="true">
                <query>
                    <![CDATA[select e from QrtzJobDetail e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="qrtzJobDetailsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="qrtzJobDetailsDataGrid.create"/>
            <button id="editBtn" action="qrtzJobDetailsDataGrid.edit"/>
            <button id="removeBtn" action="qrtzJobDetailsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="qrtzJobDetailsDl"/>
        </hbox>
        <dataGrid id="qrtzJobDetailsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="qrtzJobDetailsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="description"/>
                <column property="isDurable"/>
                <column property="isNonconcurrent"/>
                <column property="isUpdateData"/>
                <column property="jobClassName"/>
                <column property="requestsRecovery"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
